{
  "extends": ["next/core-web-vitals", "plugin:sonarjs/recommended",
  "plugin:prettier/recommended"],
  "rules": {
    "quotes": ["error", "single"],
    "prettier/prettier": ["error", {
      "printWidth": 120,
      "tabWidth": 2,
      "singleQuote": true,
      "jsxSingleQuote": true,
      "trailingComma": "none",
      "arrowParens": "always",
      "semi": false,
      "singleAttributePerLine": true,
      "endOfLine": "auto"
    }]
  }
}
